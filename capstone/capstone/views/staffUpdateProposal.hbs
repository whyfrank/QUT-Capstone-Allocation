<div id="proposal-wrapper">
	<div id="proposal-confirmation">
		<div id="proposal-confirmation-content">
			<h3>Confirm the following action for {{proposal.company_name}} - {{proposal.project_name}}:</h3>
			<h2 id="action-name"></h2>
			<button class="prop-action-btn-ctr" onclick="approveCancel()" id="cancel-btn">Cancel</button>
			<button class="prop-action-btn-ctr" onclick="proposalConfirm({{proposal.project_id}})" id="confirm-btn">Confirm</button>
		</div>
	</div>

	<div id="proposal-content">
		<div class="proposal-element">
			<span><b>Title of the proposed project: </b></span>
			<p style="font-size: 20px">{{proposal.project_name}}</p>
		</div>
		<div class="proposal-element">
			<span><b>Discipline Area of the Project: </b></span>
			<p>{{proposal.industry}}</p>
		</div>
		<div class="proposal-element">
			<span><b>Industry Partner: </b></span>
			<p>Organisation Name: {{proposal.company_name}}</p>
		</div>
		<div class="proposal-element">
			{{#proposal.project_contacts}}
				<span><b>Supervisor: </b></span><br><br>
				<p>Name: {{first_name}} {{last_name}}</p>
				<p>Email: {{email}}</p>
				<p>Phone: {{phone}}</p>
			{{/proposal.project_contacts}}
		</div>
		<div class="proposal-element">
			<span><b>Project Description: </b></span>
			<p>{{proposal.description}}</p>
		</div>
		<div class="proposal-element">

			<form id="proposalUpdateForm" method="POST" action="/action_proposal">
				<h3>Please Update Below Details</h3>
				<input type="hidden" id="state" name="state" value="false">
				<input type="hidden" id="id" name="id" value="false">
				<label for="project_output_type">Project Output Type: </label>
				<br>
				<input class="form-field" type="text" placeholder="Project Output Type" id="project_output_type" name="project_output_type" required>
				<br>


				<br>
				<label for="difficulty">Difficulty: </label>
				<br>
				<select name="difficulty" placeholder="Select Difficulty" id="difficulty" required>
					{{#difficulty}}
							<option>{{item}}</option>
					{{/difficulty}}
			</select>

				<br>
				<br>
				<label for="priority">Priority: </label>
				<br>
				<select name="priority" placeholder="Select Priority" id="priority" required>
					{{#priority}}
							<option>{{item}}</option>
					{{/priority}}
			</select>
				<br>
				<br>
				<label for="preferred_course_combination">Select Preferred Course Combination: </label>
				<br>
				<select name="preferred_course_combination" placeholder="Select Preferred Course Combination" id="preferred_course_combination" required>
					{{#coursecombo}}
							<option>{{item}}</option>
					{{/coursecombo}}
			</select>
				<br>
				<br>

				<label for="repeat_partner">Repeat Partner?</label>
				<br>
				<select name="repeat_partner" placeholder="Repeat Partner" id="repeat_partner" required>
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</select>
				<br>
				<br>

				<label for="academic_needed">Academic Needed?</label>
				<br>
				<select name="academic_needed" placeholder="Academic Needed" id="academic_needed" required>
				  <option value="0">No</option>
				  <option value="1">Yes</option>
				</select>
				<br>
				<br>

				<label for="ip_contract_requirement">IP Contract Requirements: </label>
				<br>
				<input class="form-field" type="text" placeholder="IP Contract Requirements" id="ip_contract_requirement" name="ip_contract_requirement" required>
				<br>
				<br>


				<label for="potential_support_level">Potential Support Level: </label>
				<br>
				<input class="form-field" type="text" placeholder="Potential Support Level" id="potential_support_level" name="potential_support_level" required>
				<br>
				<br>


				<label for="company_type">Company Type: </label>
				<br>
				<input class="form-field" type="text" placeholder="Company Type" id="company_type" name="company_type" required>
				<br>
				<br>

				<label for="scope_deliverables">Scope Deliverables: </label>
				<br>
				<input class="form-field" type="text" placeholder="Scope Deliverables" id="scope_deliverables" name="scope_deliverables" required>
				<br>
				<br>

				<label for="notes">Further Notes: </label>
				<br>
				<input class="form-field" type="text" placeholder="Notes" id="notes" name="notes" required>
				<br>
				<br>

				<!-- <button onclick="enableButton(); accbtn.disabled=false">Confirm</button> -->
			</form>
		</div>

	</div>


</div>


<div id="prop-action-bar">
	<!-- <button class="prop-action-btn" type="submit" onclick="proposalDisplayConfirm(true)" id="acc-btn">Accept</button> -->

	<button class="prop-action-btn" type="submit" onclick="proposalDisplayConfirm(true)" id="accbtn">Accept</button>
	<button class="prop-action-btn" onclick="proposaldeclineForm()" id="dec-btn">Decline</button>


</div>

<div id="prop-decline-bar">
	<form action='#'>
		<textarea name="decline-message" id="decline-message" placeholder="Provide an explanation for rejection of this proposal."></textarea>
		<button class="prop-action-btn" onclick="proposalDisplayConfirm(false)" id="submit-btn">Submit</button>
		<button class="prop-action-btn" onclick="rejectCancel()" id="cancel-btn">Cancel</button>
	</form>
</div>
